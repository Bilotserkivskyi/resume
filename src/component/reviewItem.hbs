<div class="col-12">
    {{#each reviewList}}
        <div class="card mb-5">
            <div class="card-body">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            {{#with title}}
                                <div><b>{{userName}}</b></div>
                                <div>{{caption}}</div>
                                <div><small>{{date}}</small></div>
                            {{/with}}
                        </div>
                    </div>
                </div>
                
                <div>
                    {{#with reviewBody}}
                        <div class="card">
                            <div class="card-body">
                                <div>
                                    <div>
                                        {{#with seller}}
                                            {{title}}: <strong>{{value}}</strong>
                                        {{/with}}
                                    </div>
                                    <div class="mt-3">
                                        {{#with rating}}
                                            {{title}}: {{value}}
                                        {{/with}}
                                    </div>
                                </div>
                                <article class="my-3">
                                    {{#each text}}
                                    <p>{{this}}</p>
                                    {{/each}}
                                </article>
                                <p>
                                    {{#with advantages}}
                                        <b>{{title}}:</b><br>
                                        <span>{{text}}</span>
                                    {{/with}}
                                </p>
                                <p>
                                    {{#with disadvantages}}
                                        <b>{{title}}:</b><br>
                                        <span>{{text}}</span>
                                    {{/with}}
                                </p>
                                <div class="col-6">
                                    {{#each images}}
                                        <span>
                                            <img class="col-3 me-2" src="{{this}}">
                                        </span>
                                    {{/each}}
                                </div>
                            </div>
                        </div>

                        <div class="col-11 ms-5">
                            {{#each coments}}
                                <div class="card mt-4">
                                    <div class="card-body">
                                        <div><b>{{userName}}</b></div>
                                        <span><small>{{date}}</small></span>
                                        <div class="mt-2">{{text}}</div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>
            </div>
        </div>
    {{/each}}
</div>