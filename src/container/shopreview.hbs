<div>
    <main>
        <div class="row">
            {{#with formBlock}}
                <div class="col-8">
                    <h1>{{header}}</h1>
                    <div>
                        {{#with rating}}
                            <span><small>{{title}}: {{value}}</small></span>
                        {{/with}}
                    </div>
                    <div class="mt-3">
                        {{#with actionBlock}}
                            <div class="nav nav-tabs">
                                {{#each tabs}}
                                    <div class="nav-item">
                                        <a class="nav-link {{#if isActive}} active {{/if}}">{{text}}</a>
                                    </div>
                                {{/each}}
                            </div>
                            <hr class="my-5">
                            <div class="card">
                                <div class="card-body">
                                    {{#with report}}
                                        <span>{{title}}</span>
                                        <div class="mt-2">
                                            {{#with button}}
                                                <button class="btn btn-sm btn-secondary" href="{{link}}">{{text}}</button>
                                            {{/with}}
                                        </div>
                                    {{/with}}
                                </div>
                            </div>
                            <hr class="my-5">
                        {{/with}}
                    </div>
                    <div>
                        {{#with feedbackBlock}}
                            <h3>{{title}}</h3>
                            <div class="mt-5">
                                {{#each buttons}}
                                    <span>
                                        <button class="me-1 btn btn-sm text-light 
                                            {{#if isWarning}} btn-warning {{/if}}
                                            {{#if isSuccess}} btn-success {{/if}}
                                            {{#if isDanger}} btn-danger {{/if}}"
                                            href="{{link}}">{{text}}
                                        </button>
                                    </span>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                </div>
                <div class="col-4">
                    {{#with goodsInfo}}
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-3">
                                    <img src="{{photo}}">
                                </div>
                                <span>{{name}}</span>
                            </div>
                        </div>
                        <div class="mt-3 card">
                            <div class="card-body">
                                <span>{{price}}</span>
                                <div>
                                    {{#if inMarket}} <small>Є в наявності</small> {{/if}}
                                </div>
                                <div class="mt-2">
                                    {{#each buttons}}
                                    <button href="{{link}}"
                                        class="mb-2 btn btn-sm {{#if isPrimary}} btn-primary {{/if}}
                                        {{#if isSecondary}} btn-secondary {{/if}}">{{text}}
                                    </button>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 card">
                            <div class="card-body">
                                {{#with seller}}
                                <span><small>{{title}}: <strong>{{value}}</strong></small></span>
                                {{/with}}
                            </div>
                        </div>
                    {{/with}}

                </div>
            {{/with}}
            <hr class="my-5">
                {{> reviewItem}}
            <div>
                {{> our_service}}
            </div>
        </div>
    </main>
</div>