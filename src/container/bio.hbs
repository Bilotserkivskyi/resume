<div>
    <main>
        <div class="row">
            <div class="col-11 ms-5 mt-5">    
            <h1>{{name}}</h1>        
                <div class="col-10">
                    <dl class="mt-3 ms-3">
                        <dt><time>{{birthdate}}</time></dt>
                        <dt>{{birthplace}}</dt>
                        <dt>{{deathdate}}</dt>
                        <dt>{{deathplace}}</dt>
                        <dt>{{nationality}}</dt>
                        <dt>{{occupation}}</dt><br>
                        {{#each known_for}}
                            <dd class="ms-5">{{this}}</dd> 
                        {{/each}}                       
                    </dl>                
                </div>
                <br>
                <div>
                    <h3>Education:</h3>
                    <dl class="ms-5">
                        {{#each education}}
                            <dd>{{degree}}</dd>
                            <dd>{{field}}</dd>
                            <dd>{{institution}}</dd>
                            <dd>Birthdate: {{year}}</dd>
                        {{/each}}
                    </dl>
                </div>
                <div>
                    <h3>Notable publications:</h3>
                    <dl class="mt-3 ms-3">
                        {{#each notable_publications}}
                        <dt><cite>{{title}}</cite></dt>
                        <dt>Year: {{year}} </dt>
                        <dt>{{publisher}}</dt>
                        <br>                    
                        {{/each}}
                    </dl>
                </div>

                <div>
                    <h3>Partners:</h3>
                    <dl class="mt-3 ms-3">
                        {{#each partners}}
                        <dt>{{name}}</dt>
                        <dt>{{relationship}}</dt>
                        <dt><time>{{years}}</time></dt>
                        <br>
                        {{/each}}
                    </dl>
                </div>

                <div>
                    <h3>Awards:</h3>
                    <dl class="mt-3 ms-3">
                        {{#each awards}}
                        <dt><cite>{{title}}</cite></dt>
                        <dt><time>{{year}}</time></dt>
                        <dd>{{description}}</dd>
                        {{/each}}
                    </dl>
                </div>

                <div>
                    <h3>Influences:</h3>
                    <ul>
                        {{#each influences}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>

                <div>
                    <h3>Influenced:</h3>
                    <ul>
                        {{#each influenced}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>

                <div>
                    <h3>Quotes:</h3>
                    <ul>
                        {{#each quotes}}
                        <li><q>{{this}}</q></li>
                        {{/each}}
                    </ul>
                </div>                

                <div>
                    <h3>Major discoveries:</h3>
                    <dl class="mt-3 ms-3">
                        {{#each major_discoveries}}
                        <dt><cite>{{title}}</cite></dt>
                        <dt><time>{{year}}</time></dt>
                        <dd>{{description}}</dd>
                        {{/each}}
                    </dl>
                </div>

                <div>
                    <h3> Contributions:</h3>
                    <dl class="mt-3 ms-3">
                        {{#with contributions}}
                            <dt><cite>{{title}}</cite></dt>
                            <p>{{description}}</>
                            <dt><time>{{year}}</time></dt>
                            <dd>{{field}}</dd>
                        {{/with}}
                    </dl>
                </div>
            </div>
        </div>
    </main> 
</div>