<div>
    <main>
        <div>
            <h1>{{header}}</h1>
        </div>

        <div class="row">
            <div class="col-8">
                {{#with contacts_data}}
                    <h3>{{title}}</h3>
                    <div>
                        {{#each buttons}}
                            <button class="btn {{#if isPrimary}} btn-warning text-light {{/if}}
                                {{#if isOutline}} btn-outline-warning {{/if}} me-2">
                                {{text}}
                            </button>
                        {{/each}}
                    </div>
                    <div>
                        {{#with form}}
                            <div>
                                {{#with input}}
                                {{>contact_form}}
                                    {{!-- <div class="row">
                                        <div class="col-6 mt-2">
                                            {{#with surname}}
                                                <label class="form-label" >{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        <div class="col-6 mt-2">
                                            {{#with name}}
                                                <label class="form-label" >{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        <div class="col-6 mt-2">
                                            {{#with phone}}
                                                <label class="form-label" >{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                        <div class="col-6 mt-2">
                                            {{#with email}}
                                                <label class="form-label" >{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            {{/with}}
                                        </div>
                                    </div> --}}
                                {{/with}}
                            </div>
                            <hr class="my-3">
                            <div>
                                {{#each switch}}
                                    <div class="form-check form-switch mb-2">
                                        <label class="form-check-label">{{text}}</label>
                                        <input type="checkbox" {{#if isActive}} checked {{/if}} class="form-check-input">
                                    </div>
                                {{/each}}
                            </div>
                            <hr class="my-3">
                        {{/with}}
                    </div>
                {{/with}}
                
                {{#with delivery}}
                    <h3>{{title}}</h3>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                {{#each select}}
                                    <div class="col-6">
                                        <div>
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select-sm">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{value}}">
                                                        {{text}}
                                                    </option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 ms-1">
                        {{#each delivery_type}}
                            <div class="form-check">
                                <input name="delivery" class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                                <div class="row">
                                    <div class="col-6">
                                        <label class="form-check-label"><small>{{type}}</small></label>
                                    </div>
                                    
                                    
                                    <div class="col-6 text-end">
                                        <label><small>{{value}}</small></label>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                    <hr class="my-4">
                    <div>
                        {{#with payment}}
                            <h3>{{title}}</h3>
                            <div class="mt-3">
                                {{#each list}}
                                    <div class="mt-2 form-check">
                                        <label class="form-check-label">
                                            {{type}}<br>
                                            <small>{{description}}</small>
                                        </label>
                                        <input name="payment" class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                                    </div>
                                {{/each}}
                            </div>
                        {{/with}}
                    </div>
                    <hr class="my-4">
                    <div>
                        {{#with contact}}
                            <h3>{{title}}</h3>
                            {{>contact_form}}
                        {{/with}}
                    </div>
                    <hr class="my-4">

                    <div>
                        {{#with coment}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control text-muted" placeholder="{{placeholder}}">
                        {{/with}}
                    </div>
                    <hr class="my-4">
                {{/with}}
                
                <div>
                    {{#with coupon}}
                        <h3>{{title}}</h3>
                        <div>
                            {{#with select}}
                                <div>
                                    {{#with availabel_coupon}}
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select">
                                            <option selected class="text-muted">{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{value}}">{{text}}</option>
                                                {{/each}}
                                        </select>                    
                                    {{/with}}
                                </div>

                                <div class="mt-2">
                                    {{#with friend_coupon}}
                                        <label class="form-label">{{label}}</label>
                                        <select class="form-select">
                                            <option selected class="text-muted">{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{value}}">{{text}}</option>
                                                {{/each}}
                                        </select>
                                        <div class="form-text text-muted">Caption text, description, error notification</div>                    
                                    {{/with}}
                                </div>
                            {{/with}}
                        </div>

                        <div>
                            {{#with add}}
                                <div class="my-3">
                                    {{#with friend}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-muted">{{caption}}</div>
                                    {{/with}}
                                </div>

                                <div class="col-11 my-3">
                                    {{#with colleague}}
                                    <label class="form-label">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text text-muted">{{caption}}</div>
                                    {{/with}}
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>
                <hr class="my-4">

                <div>
                    {{#with quiz}}
                        <h4>{{title}}</h4>
                        <div class="mt-3">
                            {{#with preference}}
                                <lable class="form-check-lable">{{title}}</lable> 
                            
                                <div>
                                    {{#each options}}
                                        <div class="form-check">
                                            <lable class="form-check-label">{{this}}</lable>
                                            <input name="help" class="form-check-input" type="radio" {{#if @first}} checked {{/if}}>
                                        </div>
                                    {{/each}}
                                </div>
                            {{/with}}
                        </div>
                        <div class="mt-3">
                            {{#with your_expirience}}
                                <label class="form-label">{{label}}</label>
                                <input class="form-control">
                            {{/with}}
                        </div>

                        <div class="mt-3">
                            {{#with purchase_frequency}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected class="text-muted">{{placeholder}}</option>
                                    {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            {{/with}}
                        </div>

                        <div class="mt-3">
                            {{#with factors}}
                                <label>{{title}}</label>
                                <div class="mt-2">
                                    {{#each options}}
                                        <div class="form-check">
                                            <label class="form-check-label">{{this}}</label>
                                            <input name="factors" type="checkbox" class="form-check-input">
                                        </div>   
                                    {{/each}}
                                </div>
                            {{/with}}
                        </div>
                    {{/with}}
                </div>
            </div>

            <div class="col-4">
                <div class="card mt-3">
                    {{#each action_block}}
                        <span>
                            <button class="my-1 ms-1
                                {{#if isPrimary}} btn btn-success {{/if}}
                                {{#if isDanger}} btn btn-danger {{/if}}
                                {{#if isInfo}} btn btn-info text-light {{/if}}">
                                {{text}}
                            </button>
                       </span>
                    {{/each}}
                </div>

                <div>
                    <div class="card mt-3">
                        <div class="card-body">
                            {{#with total}}
                                <h3>{{title}}</h3>
                                {{#each item_list}}
                                    <div><small>{{name}}: {{price}}</small></div>
                                {{/each}}
                                <hr>
                                {{#each additional_info}}
                                    <div><small>{{text}}: {{value}}</small></div>
                                {{/each}}
                                <hr>
                                {{#with total_price}}
                                    <div><small>{{text}}: {{value}}</small></div>
                                {{/with}}
                                <hr>
                                {{#each button}}
                                    <div>
                                        <button class="{{#if isPrimary}} btn btn-primary btn-sm {{/if}}
                                                       {{#if isOutline}} btn btn-outline-primary btn-sm {{/if}} mb-2">
                                            <small>{{text}}</small>
                                        </button>
                                    </div>
                                {{/each}}
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>

             <hr class="mt-5">
        </div>
    </main>
</div>