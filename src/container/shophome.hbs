<div>
    <main>
        <div class="row">
            <div class="col-12">
                 <div class="card">
                    {{#with navigation}}
                        {{!-- <div class="row">                   --}}
                            <div class="col-4">
                                <h1 class="m-3">{{Logo}}</h1>
                            </div>
                        {{!-- </div>  --}}
                        {{!-- <div class="row"> --}}
                                <div class="">
                                    <div class="row">                           
                                        {{#each links}}
                                            <div class="col-2">
                                                <div class="nav">
                                                    <div class="nav-item m-3">
                                                        <a class="nav-link" href="{{href}}">{{text}}</a>
                                                    </div>
                                                </div>
                                            </div>
                                        {{/each}} 
                                    </div>
                                </div>                               
                        {{!-- </div>       --}}
                    {{/with}}
                </div> 
            </div>

            <div class="mt-5">
                {{#with newsBlock}}
                <div class="col-12">
                    {{!-- <div> --}}
                        <h2 class="text-center">{{title}}</h2>
                    {{!-- </div> --}}
                    <div class="row">
                        {{#each cards}}
                            <div class="col-3 g-2">
                                <div class="card text-bg-dark">
                                    <div class="card-body">
                                        <h6>
                                            {{title}}
                                            <span class="badge {{#if isTop}} text-bg-danger {{/if}}">
                                                {{#if isTop}} Нова {{/if}}
                                            </span>
                                            <span class="badge {{#if isNew}} text-bg-success {{/if}}">
                                                {{#if isNew}} Топ {{/if}}
                                            </span>
                                        </h6>
                                        <p><small>{{description}}</small></p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
            <hr class="my-5">

            <div class="col-12">
                {{#with goodsBlock}}
                    <div class="row">
                        {{#each tabs}}
                            <div class="col-3 nav nav-tabs">                               
                                <div class="nav-item">
                                    <a class="nav-link text-primary {{#if isActive}} active {{else}} disabled {{/if}}">
                                        {{text}}
                                    </a>
                                </div>                               
                            </div>
                        {{/each}}
                    </div>
                    <dive class="row">
                        {{#each cards}}
                            <div class="col-4">
                                <div class="card">
                                    <img src="{{image}}">
                                    <div class="card-body">
                                        <h6 class="mt-2">                                       
                                                {{title}}                                        
                                            <span class="badge {{#if isHot}} text-bg-warning {{/if}} text-light rounded-pill">
                                                {{#if isHot}} HOT {{/if}}
                                            </span>
                                            <span class="badge {{#if isNew}} text-bg-primary {{/if}} text-light rounded-pill">
                                                {{#if isNew}} Нове {{/if}}
                                            </span>                                                                               
                                        </h6>
                                    <P><small>{{description}}</small></P>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </dive>
                {{/with}}
            </div>

            <div class="col-12 card text-bg-dark">
                {{#with subscribe}}
                    <div>
                        <h2 class="mt-4 ms-3">{{header}}</h2>
                        <p class="ms-3">{{description}}</p>
                        <div class="row">
                            {{#each buttons}}
                                <div class="col-5 mb-3 ms-5">
                                    <div>
                                        <button class="btn btn-primary" href="{{link}}">{{text}}</button>
                                    </div>                          
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/with}}
            </div>
            <hr class="my-5">

            <div class="card text-bg-success text-center">
                {{#with service}}
                    <div>
                        <div>
                            <h2 class="mt-3">{{title}}</h2>
                            <p>{{description}}</p>
                                <div>
                                    {{#each buttons}}
                                        <button class="btn btn-primary mb-3" href="{{link}}">{{text}}</button>
                                    {{/each}}
                                </div>
                        </div>
                    </div>
                {{/with}}
            </div>
            <hr class="my-5">

            <div class="row">                
                {{#each footer}}
                    <div class="nav col-2">
                        <div>
                            {{#each this}}
                                <div>
                                    <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}"><small>{{this.text}}</small></a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                {{/each}}                              
            </div>
        </div>
    </main>
</div>